@page
@model final.Pages.Physicians.IndexModel

@{
    ViewData["Title"] = "Physicians";
}

<h1>@ViewBag.Title</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Physician[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Physician[0].Specialty)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Physician) {
        <tr>
            <td>
                Dr.
                @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialty)
            </td>
        </tr>
}
    </tbody>
</table>
