@model IEnumerable<midterm.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<h1>@ViewBag.Title</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.DepartmentSortParam">
                    @Html.DisplayNameFor(model => model.DepartmentName)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ManagerLastName)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManagerFirstName) @Html.DisplayFor(modelItem => item.ManagerLastName)
            </td>
        </tr>
}
    </tbody>
</table>
